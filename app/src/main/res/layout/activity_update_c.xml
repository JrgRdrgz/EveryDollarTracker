<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_c"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/up_textview"
        android:layout_width="345dp"
        android:layout_height="62dp"
        android:fontFamily="@font/amiko"
        android:text="UPDATE YOUR INFO"
        android:textColor="#009688"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <EditText
        android:id="@+id/updateemail_id"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="Update Your Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_textview"
        app:layout_constraintVertical_bias="0.367" />

    <EditText
        android:id="@+id/updatepass_id"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="Update Your Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateemail_id"
        app:layout_constraintVertical_bias="0.222" />

    <Button
        android:id="@+id/updateB_id"
        android:layout_width="224dp"
        android:layout_height="58dp"
        android:text="update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatepass_id"
        app:layout_constraintVertical_bias="0.188" />

    <EditText
        android:id="@+id/updatefullname_id"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="Update Your Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/updateemail_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_textview" />

    <Button
        android:id="@+id/cancelB_id"
        android:layout_width="198dp"
        android:layout_height="51dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateB_id" />
</androidx.constraintlayout.widget.ConstraintLayout>